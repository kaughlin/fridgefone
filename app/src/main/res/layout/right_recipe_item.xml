<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/list_fragment_padding">

                <android.support.v7.widget.CardView
                    style="@style/RecipeCardView">

                    <ImageView
                        android:id="@+id/ivImage1"
                        android:layout_height="143dp"
                        style="@style/RecipeImageView"/>

                    <ImageView
                        android:id="@+id/opaque1"
                        style="@style/OpaqueImageView" />

                    <TextView
                        android:id="@+id/tvName1"
                        style="@style/RecipeTitleTextView"
                        android:background="@drawable/gradient_box" />

                </android.support.v7.widget.CardView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="4dp"
                android:padding="@dimen/list_fragment_padding">

                <android.support.v7.widget.CardView
                    style="@style/RecipeCardView">

                    <ImageView
                        android:id="@+id/ivImage2"
                        android:layout_height="143dp"
                        style="@style/RecipeImageView"/>

                    <ImageView
                        android:id="@+id/opaque2"
                        style="@style/OpaqueImageView" />

                    <TextView
                        android:id="@+id/tvName2"
                        style="@style/RecipeTitleTextView"
                        android:background="@drawable/gradient_box" />

                </android.support.v7.widget.CardView>
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/list_fragment_padding">

            <android.support.v7.widget.CardView
                style="@style/RecipeCardView">

                <ImageView
                    android:id="@+id/ivImage3"
                    android:layout_height="290dp"
                    style="@style/RecipeImageView"/>

                <ImageView
                    android:id="@+id/opaque3"
                    style="@style/OpaqueImageView" />

                <TextView
                    android:id="@+id/tvName3"
                    style="@style/RecipeTitleTextView"
                    android:background="@drawable/gradient_box" />

            </android.support.v7.widget.CardView>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>