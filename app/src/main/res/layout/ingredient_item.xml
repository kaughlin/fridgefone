<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/medium_padding"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvIngredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/detail_paragraph_padding"
        android:fontFamily="@font/roboto_light"
        android:padding="@dimen/extremely_small_padding"
        android:text="@string/title"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="@dimen/details_paragraph_text_size" />

    <ImageView
        android:id="@+id/ivIngredientIcon"
        android:layout_width="@dimen/details_icon_width"
        android:layout_height="@dimen/details_icon_height"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/medium_padding"
        android:paddingTop="@dimen/very_small_padding"
        app:srcCompat="@drawable/white_plus" />

</RelativeLayout>