<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/fridge_item_square_len"
    android:layout_height="@dimen/fridge_item_square_len"
    android:layout_margin="@dimen/no_margin"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/no_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            cardview:id="@+id/ivSelectCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/baseline_check_circle_outline_black_18dp" />

        <TextView
            android:id="@+id/tvFood_Name"
            android:layout_width="@dimen/fridge_item_text_width"
            android:layout_height="@dimen/fridge_item_text_height"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/food_name"
            android:textColor="@color/food_text_background"
            android:textSize="@dimen/fridge_item_text_size" />


        <ImageView
            android:id="@+id/ivFood_Image"
            android:layout_width="@dimen/fridge_item_image_width"
            android:layout_height="@dimen/fridge_item_image_height"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/ivShelf"
            android:layout_width="match_parent"
            android:layout_height="@dimen/shelf_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/shelf"
            android:scaleType="centerCrop" />

    </RelativeLayout>

</android.support.v7.widget.CardView>