<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/theme_peach</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/fascinate</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/black</item>
    </style>

    <style name="RecipeTitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|bottom</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:padding">@dimen/very_small_padding</item>
        <item name="android:paddingLeft">@dimen/very_small_padding</item>
        <item name="android:paddingRight">@dimen/very_small_padding</item>
        <item name="android:text">@string/dish_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/recipe_title_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#70000000</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">6</item>
    </style>

    <style name="RecipeImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="RecipeCardView" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/card_view_radius</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="PopUpTheme">
        <item name="android:id">@id/imageView2</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

</resources>
